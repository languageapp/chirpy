<div class="container">
  <div class="row">
    <main class="col s6 offset-s3 z-depth-3 forgotten-password-main">

<h4>Forgot your password?</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { class: 'chirpy-form'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field input-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'waves-effect waves-light btn log-in-button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


    </main>
  </div>
</div>
