<div class="container">
  <div class="row">
    <main class="col s6 offset-s3 z-depth-3 signup-main">
      <h4>Log In</h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: 'chirpy-form'}) do |f| %>
      <div class="field input-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field input-field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field input-field remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'waves-effect waves-light btn log-in-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>


    </main>
  </div>
</div>
